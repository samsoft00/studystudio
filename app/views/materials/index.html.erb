<p id="notice"><%= notice %></p>

<h1>Listing Materials</h1>

<table>
  <thead>
    <tr>
      <th>Material name</th>
      <th>Material file</th>
      <th>Description</th>
      <th>Monetize</th>
      <th>Amount</th>
      <th>Save status</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.material_name %></td>
        <td><%= material.material_file %></td>
        <td><%= material.description %></td>
        <td><%= material.monetize %></td>
        <td><%= material.amount %></td>
        <td><%= material.save_status %></td>
        <td><%= material.course %></td>
        <td><%= link_to 'Show', material %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

