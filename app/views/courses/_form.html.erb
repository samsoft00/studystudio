<%= form_for @course, :html => { :class => "form-horizontal course" } do |f| %>

  <% if @course.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @course.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :code, "Course Code", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:code) %>
  </div>
  <div class="form-group">
    <%= f.label :name, "Course Name", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :thumbnail, "Course Thumbnail", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :thumbnail, :class => 'form-control' %>
    </div>
    <%=f.error_span(:thumbnail) %>
  </div>
  <div class="form-group">
    <%= f.label :publish, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box_tag :publish, :class => 'form-control' %>
    </div>
    <%=f.error_span(:publish) %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Course Description", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area(:description, size: "24x6", :class => 'form-control') %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                courses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
