<%- model_class = Course -%>

<div class="course-action-panel panel panel-default">
  <div class="panel-heading">
    <h1><%= @course.code %></h1>
    <p>Course Description</p>
    <article><%= @course.description %></article>
  </div>
  <div class="panel-body">
    <div class="col-md-6">
      <h4>Course: <%= @course.name %></h4>
    </div>
    <div class="col-md-6">
      <ul class="course-action-btn pull-right">
        <li><%= link_to t('.back', :default => t("helpers.links.back")), courses_path, :class => 'btn btn-default'  %></li>
        <li><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_course_path(@course), :class => 'btn btn-default' %></li>
        <li><%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    course_path(@course),
                    :method => 'delete',
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-danger' %>
        </li>
      </ul>
    </div>

  </div>
</div>

